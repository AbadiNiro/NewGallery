<style>
    .tooltip_1 {
        position: relative;
        display: inline-block;
        border-bottom: 1px dotted black;
    }

        .tooltip_1 .tooltiptext_1 {
            visibility: hidden;
            width: 600px;
            background-color: #555;
            color: #fff;
            text-align: center;
            border-radius: 6px;
            padding: 5px 0;
            position: absolute;
            z-index: 1;
            bottom: 125%;
            left: 50%;
            margin-left: -60px;
            opacity: 0;
            transition: opacity 0.3s;
        }

            .tooltip_1 .tooltiptext_1::after {
                content: "";
                position: absolute;
                top: 100%;
                left: 50%;
                margin-left: -5px;
                border-width: 5px;
                border-style: solid;
                border-color: #555 transparent transparent transparent;
            }

        .tooltip_1:hover .tooltiptext_1 {
            visibility: visible;
            opacity: 1;
        }


